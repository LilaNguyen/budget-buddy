<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
    fx:controller="application.controller.ViewTransactionDetailController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Transaction Details" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <VBox layoutX="20.0" layoutY="60.0" spacing="10.0">
            <children>
                <Label fx:id="accountLabel" text="Account: " />
                <Label fx:id="typeLabel" text="Type: " />
                <Label fx:id="dateLabel" text="Date: " />
                <Label fx:id="descriptionLabel" text="Description: " />
                <Label fx:id="paymentLabel" text="Payment: " />
                <Label fx:id="depositLabel" text="Deposit: " />
            </children>
        </VBox>
        <Button layoutX="20.0" layoutY="300.0" text="Back" onAction="#handleBackButton" />
    </children>
</AnchorPane>